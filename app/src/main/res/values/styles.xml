<resources>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#1B1B1B</item>
        <!--<item name="android:textSize">12sp</item>-->
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/md_black_1000</item>
        <item name="android:spotShadowAlpha">0.5</item>

        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="CustomToolbarStyle" parent="Theme.Design.Light.NoActionBar">
        <item name="android:background">@color/md_black_1000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <!-- Menu Item Theme -->

    <style name="CustomPopupStyle" parent="Theme.Design.Light.NoActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="overlapAnchor">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

</resources>
