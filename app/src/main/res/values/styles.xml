<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/md_black_1000</item>
        <item name="android:spotShadowAlpha">0.5</item>
        <item name="android:statusBarColor">@color/secondColor</item>
    </style>
    
    <style name="CustomButton">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomToolbar">
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:background">@color/secondColor</item>
    </style>

</resources>
