<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_listPecaClas"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <View
        android:id="@+id/toolbar_shadow_listPecaClas"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/toolbar_listPecaClas"
        android:background="@drawable/toolbar_dropshadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="18dp"
        android:layout_marginHorizontal="18dp"
        android:layout_below="@+id/toolbar_shadow_listPecaClas">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_pecaclas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_add_listpecaclas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/add"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>