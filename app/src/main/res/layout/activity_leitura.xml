<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:id="@+id/act_leitura"
    tools:context="br.com.wjd.fragments.Leitura">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="16dp" />

    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/toolbar_dropshadow" />

    <Spinner
        android:id="@+id/spin_classe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_below="@+id/toolbar_shadow"
        android:paddingVertical="10dp"
        android:layout_margin="5dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll01_leitura"
        android:layout_below="@+id/spin_classe"
        android:layout_margin="0dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF"
        android:divider="@color/md_black_1000"
        android:dividerHeight="1dp"
        android:numColumns="1"
        android:verticalSpacing="5dp"
        />

    <LinearLayout
        android:id="@+id/ll01_leitura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toolbar_shadow3">


        <EditText
            android:id="@+id/et_newTag_leitura"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:inputType="number"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/bt_addTagManual"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            android:visibility="invisible"/>
        
    </LinearLayout>



    <View
        android:id="@+id/toolbar_shadow3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/tvTotal"
        android:background="@drawable/toolbar_dropshadow" />


    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pbLeitura"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:focusable="false"
        android:gravity="center"
        android:padding="0dp"
        android:text="0"
        android:textSize="90sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pbLeitura"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/leitura_btn_grp"
        android:indeterminate="true"
        android:layout_margin="2dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/leitura_btn_grp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/btn_leituraTag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_play_arrow_24"/>
        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_stop_24"/>
        <ImageView
            android:id="@+id/btn_shared"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_cloud_upload_24"/>
        <ImageView
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_delete_24"/>

    </LinearLayout>

</RelativeLayout>